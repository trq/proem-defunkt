#!/bin/bash

option=$1;

version=`grep 'VERSION' lib/Proem/Proem.php`
set -- $version

IFS="'"; declare -a Array=($*) 
line="${Array[4]}" 

set -- $line

IFS="."; declare -a Array=($*) 
major="${Array[0]}" 
minor="${Array[1]}" 
incr="${Array[2]}"

if [ "$option" = "-major" ]; 
then
	major=$((major+1))
	minor=0
	incr=0
elif [ "$option" = "-minor" ]; then
	minor=$((minor+1))
	incr=0
elif [ "$option" = "-incr" ]; then    
	incr=$((incr+1))
else
   echo "Usage: $0 -[major|minor|incr]";
   exit;
fi

echo "incremented to $major.$minor.$incr";

sed "s/VERSION = '.*';/VERSION = '$major.$minor.$incr';/" lib/Proem/Proem.php > lib/Proem/Proem.php.new
mv lib/Proem/Proem.php.new lib/Proem/Proem.php
